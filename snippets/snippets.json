{
    "OAS 3.0": {
        "prefix": "swaoas",
        "body": [
            "openapi: 3.0.0",
            "",
            "info:",
            "  title: ${1}",
            "  description: ${2}",
            "  version: ${3}",
            "  contact:",
            "    name: ${4:Example}",
            "    email: ${5:example@example.com}",
            "",
            "servers:",
            "  - url: ${6}",
            "    description: ${7}",
            "",
            "paths:",
            "  ${0}"
        ],
        "description": "Initialize a OAS 3.0 file"
    },
    "Basic Path snippet": {
        "prefix": "swapath",
        "body": [
            "/${1:api}:",
            "  ${2:get}:",
            "    description: ${3:Describe this route}",
            "    summary: ${3:Describe this route}",
            "    responses:",
            "      ${0}"
        ],
        "description": "Snippet to generate a Basic Path"
    },
    "Path Snippet with Parameters": {
        "prefix": "swapathparam",
        "body": [
            "/${1:api}/${2:id}:",
            "  ${3:get}:",
            "    description: ${4:Describe this route}",
            "    summary: ${4:Describe this route}",
            "    parameters:",
            "      - in: ${5:path}",
            "        name: ${2:id}",
            "        required: ${6: true}",
            "        description: ${7: description}",
            "        schema:",
            "          type: ${8: string}",
            "    responses:",
            "      ${0}"
        ],
        "description": "Snippet to generate a Path with parameters"
    },
    "Response object": {
        "prefix": "swaresp",
        "body": [
            "${1:200}:",
            "  description: ${2:Description}",
            "  content: ",
            "    application/json:",
            "      schema:",
            "        ${3:type}: ${4:string}${0}"
        ],
        "description": "Response with content"
    },
    "Parameter object": {
        "prefix": "swaparam",
        "body": [
            "- in: ${1:path}",
            "  name: ${2:name}",
            "  description: ${3:description}",
            "  required: ${4:false}",
            "  schema:",
            "    type: ${5:string}${0}"
        ],
        "description": "Parameter object"
    },
    "Request Body object": {
        "prefix": "swareqbody",
        "body": [
            "requestBody:",
            "  required: ${1:false}",
            "  content:",
            "    ${2:application/json}:",
            "      schema:",
            "        ${0}"
        ],
        "description": "Generate Request Body snippet"
    },
    "Header object": {
        "prefix": "swaheader",
        "body": [
            "headers:",
            "  ${1:Name}:",
            "    description: ${2: Description}",
            "    schema:",
            "      type: ${3:string}${0}"
        ],
        "description": "Generate Header Object"
    },
    "Object Property Snippet": {
        "prefix": "swaobj",
        "body": [
            "type: object",
            "properties:",
            "  name:",
            "    type: ${1:string}",
            "    example: ${2:example}"
        ],
        "description": "Generate a deprecated operation"
    },
    "String Property Snippet": {
        "prefix": "swastr",
        "body": [
            "type: string",
            "example: ${1:example}"
        ],
        "description": "Generate a deprecated operation"
    },
    "Deprecated Object": {
        "prefix": "sdeprcted",
        "body": [
            "deprecated: ${1: true}${0}"
        ],
        "description": "Generate a deprecated operation"
    }
}